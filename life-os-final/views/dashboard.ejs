<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - LifeOS</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
    <div id="loader" class="flex items-center justify-center h-screen text-xl font-semibold">Loading LifeOS...</div>

    <div id="content" style="display:none;">
        <%- include('partials/navbar') %>
        <main class="container mx-auto px-6 py-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-6">Welcome, <span id="user-email"></span></h1>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <a href="/app/todo" class="block bg-white p-8 rounded-xl shadow-md hover:shadow-lg transition-shadow">
                    <h2 class="text-3xl font-bold text-gray-800 mb-2">Checkmate</h2>
                    <p class="text-gray-600">Master your tasks.</p>
                </a>
                <a href="/app/links" class="block bg-white p-8 rounded-xl shadow-md hover:shadow-lg transition-shadow">
                    <h2 class="text-3xl font-bold text-gray-800 mb-2">Stash</h2>
                    <p class="text-gray-600">Curate your web.</p>
                </a>
            </div>
        </main>
    </div>

    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
        import { getAuth, onAuthStateChanged, signOut } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";

        const firebaseConfig = {
          apiKey: "AIzaSyBRVrKfFmJmQL07HB2_tyPk4mwcPQQqXdM",
          authDomain: "emilyqiao-vibecoding.firebaseapp.com",
          projectId: "emilyqiao-vibecoding",
          storageBucket: "emilyqiao-vibecoding.appspot.com",
          messagingSenderId: "381599961996",
          appId: "1:381599961996:web:9e87f662db6948fef77ca9",
          measurementId: "G-BK6EVmMGBR"
        };

        const app = initializeApp(firebaseConfig);
        const auth = getAuth(app);

        const loader = document.getElementById('loader');
        const content = document.getElementById('content');
        const userEmailSpan = document.getElementById('user-email');
        const signOutBtn = document.getElementById('sign-out-btn');

        onAuthStateChanged(auth, (user) => {
            if (user) {
                // User is signed in
                userEmailSpan.textContent = user.email;
                signOutBtn.classList.remove('hidden');

                loader.style.display = 'none';
                content.style.display = 'block';

            } else {
                // User is signed out
                window.location.href = '/login';
            }
        });

        signOutBtn.addEventListener('click', () => {
            signOut(auth).then(() => {
                window.location.href = '/';
            }).catch((error) => {
                console.error('Sign out error:', error);
            });
        });
    </script>

</body>
</html>